<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="anchorpane" prefHeight="325.0" prefWidth="325.0" stylesheets="@../notepad_dark/sticky-gui.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="notepad_dark.StickyController">
   <children>
      <Button fx:id="stickToMainButton" layoutX="194.0" layoutY="268.0" mnemonicParsing="false" onAction="#stickToMain" text="Stick To Main Page">
         <font>
            <Font name="System Bold" size="11.0" />
         </font>
      </Button>
      <Label fx:id="enterTitleLabel" layoutX="36.0" layoutY="29.0" onMouseClicked="#showTextField" prefHeight="33.0" prefWidth="149.0" text="Enter Title...">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <Label fx:id="typingAreaLabel" alignment="TOP_LEFT" layoutX="36.0" layoutY="88.0" onMouseClicked="#showTextArea" prefHeight="163.0" prefWidth="258.0" text="Start Typing Here..." wrapText="true" />
      <TextArea fx:id="typeTextArea" layoutX="36.0" layoutY="88.0" onKeyPressed="#changeTextLabel" prefHeight="163.0" prefWidth="258.0" visible="false" wrapText="true" />
      <TextField fx:id="titleTextField" layoutX="36.0" layoutY="29.0" onKeyPressed="#changeTitleLabel" prefHeight="33.0" prefWidth="149.0" visible="false" />
   </children>
</AnchorPane>
